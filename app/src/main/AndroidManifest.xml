<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jpro.smarttrains">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tt"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SmartAvailActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllTrainsStatus"
            android:label="@string/title_activity_all_trains_status">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainHome"
            android:label="@string/title_activity_main_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplitJourneyHome"
            android:label="Split Journey"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplitStations"
            android:label="Split Your Journey as" />
        <activity
            android:name=".SplitJourneyTabbed"
            android:label="@string/title_activity_split_jouney_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TrainsInfo" />
        <activity android:name=".TrainsByNo" />
        <activity android:name=".TrainRoute" />
        <activity
            android:name=".SeatAvailabilitySimple"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".PnrStatusHomeActivity"
            android:label="@string/title_activity_pnr_status_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SmartSpecificTrainAvail" />
        <activity android:name=".TrainsBetweenStationActivityHome" />
        <activity android:name=".OfflineRoutesActivity" />
        <activity android:name=".TrainBetweenStations"></activity>
    </application>

</manifest>