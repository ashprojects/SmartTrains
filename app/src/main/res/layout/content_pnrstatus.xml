<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jpro.smarttrains.activities.PNRStatusActivity"
    tools:showIn="@layout/activity_pnrstatus">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/description"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19 July 2016"
            android:textAlignment="center"
            android:id="@+id/pnr_status_date"
            android:textSize="19dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12853 AMARKANTAK EXPRESS"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:textSize="18dp"
            android:id="@+id/pnr_status_trname" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SLEEPER CLASS"
            android:textAlignment="center"
            android:textSize="16dp"
            android:id="@+id/pnr_status_class" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:weightSum="0.95"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="SDL"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:id="@+id/pnr_status_st1code" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="SHAHDOL"
                    android:paddingRight="5dp"
                    android:id="@+id/pnr_status_st1name"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:layout_weight="0.15"
                android:src="@drawable/arrow1"
                android:layout_width="16dp"
                android:layout_height="60dp" />

            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="BPL"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:id="@+id/pnr_status_st2code" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="BHOPAL JN"
                    android:paddingLeft="5dp"
                    android:id="@+id/pnr_status_st2name"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/pnr_status_chart_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="CHART PREPARED"
            android:background="#0eff3333" />

        <TableLayout
            android:padding="6dp"
            android:id="@+id/pnr_status_table_layout"
            android:shrinkColumns="0,1,2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:layout_marginTop="2dp">

                <TextView
                    android:layout_weight="0.3"
                    android:text="Passenger"
                    android:layout_column="0" />

                <TextView
                    android:layout_weight="0.3"
                    android:text="Booking Status"
                    android:layout_column="1" />

                <TextView
                    android:layout_weight="0.4"
                    android:text="Current Status"
                    android:layout_column="2" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    android:layout_weight="0.3"
                    android:text="1"
                    android:layout_column="0" />

                <TextView
                    android:layout_weight="0.3"
                    android:text="W/L 10"
                    android:layout_column="1" />

                <TextView
                    android:layout_weight="0.4"
                    android:text="CNF"
                    android:layout_column="2" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
