<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jpro.smarttrains.activities.MainHome"
    tools:showIn="@layout/app_bar_main_home">
    <TextView
        android:id="@+id/rq_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/description"
        android:textAlignment="center"
        android:text="ASHOS"
        android:layout_marginBottom="20dp"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:background="#ffffff"
    android:layout_marginTop="50dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version: 2.1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:id="@+id/verDesc"
        android:layout_marginBottom="25dp"
        />

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"


                >
            <ImageButton
                android:id="@+id/smart_avail_start_btn"

                android:src="@drawable/ic_tr"
                style="@style/MainHomeToggleImageButton"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Smart Availability"
                android:textColor="#000000"
                android:layout_weight="0.3"
                />
            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <ImageButton
                    android:id="@+id/split_start_btn"
                    android:src="@drawable/ticket"
                    style="@style/MainHomeToggleImageButton"

                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Split Journey"
                    android:textAlignment="center"
                    android:textColor="#000000"></TextView>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <ImageButton
                    android:id="@+id/pnr_status_launch_btn"
                    android:src="@drawable/ic_pnr_logo_dark"
                    android:transitionName="pnr_transition"
                    style="@style/MainHomeToggleImageButton" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PNR &amp; Journeys"
                    android:textAlignment="center"
                    android:textColor="#000000"></TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"


                >
                <ImageButton
                    android:id="@+id/trains_by_no_btn"
                    android:src="@drawable/ic_dialpad_black_24dp"
                    style="@style/MainHomeToggleImageButton"
                    android:transitionName="trno_trans"
                    />
                <TextView

                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Trains By No"
                    android:textColor="#000000"
                    android:layout_weight="0.3" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <ImageButton
                    android:id="@+id/seat_avai_simple"
                    android:src="@drawable/ic_seat"
                    style="@style/MainHomeToggleImageButton"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seat Availability"
                    android:textAlignment="center"
                    android:textColor="#000000"></TextView>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <ImageButton

                    android:id="@+id/trains_bwstns_btn"
                    android:src="@drawable/ic_btw"
                    style="@style/MainHomeToggleImageButton"

                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Train Between Stations"
                    android:textAlignment="center"
                    android:layout_weight="0.3"
                    android:textColor="#000000"></TextView>
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"


                >

                <ImageButton
                    android:id="@+id/offlineroutes_trigger"
                    android:src="@drawable/ic_download"
                    style="@style/MainHomeToggleImageButton" />

                <TextView

                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Saved Routes"
                    android:textColor="#000000"
                    android:layout_weight="0.3" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipSpan"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_marginTop="30dp"

        android:layout_height="wrap_content">
        <TextView
            android:background="#06e60f0f"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tip of the day"
            android:textSize="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/tipText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/def_tip"
            android:textAlignment="center"
            />
    </LinearLayout>

</LinearLayout>


</RelativeLayout>
