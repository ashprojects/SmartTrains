<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/live_status_list_item_header"
        android:text="CROSSED"
        android:padding="3dp"
        android:layout_marginLeft="3dp"

        android:textColor="#FFFF"
        android:background="@color/black_overlay" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#FFFF"
        android:textStyle="bold"
        android:id="@+id/delayStatusInMins"
        android:text="Delayed by 14 mins" />

    <ImageView

        android:id="@+id/live_status_item_spot_img"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_train_running" />

    <LinearLayout

        android:id="@+id/list_item_live_status_wrapperlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/description"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.22"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:padding="1dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/live_status_item_currStn"
                android:text="SHAHDOL HOSHANGAB\n(SDL)"
                android:textStyle="bold"

                />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"
            android:background="#000000">

        </View>

        <LinearLayout
            android:layout_marginLeft="3dp"

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/schArrTextView"

                android:text="Sch Arr:\n13:50, 2 Jul" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actArrTextView"
                android:text="Act Arr:\n14:20, 2 Jul"
                android:textColor="@color/mdtp_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <TextView
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/schDeptTextView"
                android:text="Dess s s s s sssss" />

            <TextView
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/actDeptTextView"
                android:text="Act Dept: 14:20, 2 Jul"
                android:textColor="@color/mdtp_red" />
        </LinearLayout>

        <ImageView

            android:id="@+id/live_status_item_crosed_img"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="0.08"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_tick" />


    </LinearLayout>

</LinearLayout>