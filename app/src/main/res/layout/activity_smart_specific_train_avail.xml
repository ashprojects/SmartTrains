<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_smart_specific_train_avail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="jpro.smarttrains.activities.SmartSpecificTrainAvail">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_marginTop="5dp"
          style="@style/description"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_train"
                  android:layout_gravity="center"
                  />


              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/trName"
                  android:padding="10dp"
                  android:textSize="17dp"
                  android:textStyle="bold"
                  android:text="12854 - AMARKANTAK EXPRESS"
                  android:textAlignment="center"
                  />

          </LinearLayout>



          <TextView
              android:textColor="#000000"
              android:layout_weight="0.3"
              android:text="Runs on:"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <LinearLayout
              android:orientation="horizontal"
              android:layout_weight="0.7"
              android:id="@+id/runsOnLL"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          </LinearLayout>

          <LinearLayout
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <Spinner
                  android:layout_weight="0.3"
                  android:layout_width="0dp"
                  android:id="@+id/stn1"
                  android:hint="FROM"
                  android:textSize="14dp"
                  android:textAlignment="center"
                  android:layout_gravity="center_vertical"
                  android:layout_height="wrap_content" />
              <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@drawable/arrow1"
                  android:background="#00ffffff"
                  android:layout_alignTop="@+id/textView"
                  android:id="@+id/imageView"
                  android:layout_gravity="center_horizontal" />

              <Spinner
                  android:layout_weight="0.3"
                  android:layout_width="0dp"
                  android:id="@+id/stn2"
                  android:hint="TO"
                  android:layout_gravity="center_vertical"
                  android:textSize="14dp"
                  android:textAlignment="center"
                  android:layout_height="wrap_content" />

          </LinearLayout>
          <LinearLayout
              android:layout_marginTop="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <Button
                  android:layout_gravity="center"
                  android:focusable="true"
                  android:id="@+id/dateSelBtn"
                  android:layout_weight="0.4"
                  android:layout_width="0dp"
                  android:text="SELECT DATE"
                  android:textColor="#ffffff"
                  android:background="@color/colorPrimary"
                  android:layout_height="35dp"

                  />
              <TextView
                  android:id="@+id/date"
                  android:layout_weight="0.6"
                  android:layout_width="0dp"
                  style="@style/description"
                  android:layout_height="wrap_content"
                  android:text="DATE"
                  android:layout_gravity="left|center_vertical"
                  />

          </LinearLayout>

          <Button
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="35dp"
              android:text="SEARCH FOR AVAILABILITY"
              android:textColor="#ffffff"
              android:id="@+id/loadBtn"
              android:background="@color/colorPrimary"

              />



      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:id="@+id/span1"
          style="@style/description"
          android:visibility="visible"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:background="#efffff"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="AVAILABLE 100"
              android:id="@+id/status"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textSize="15dp"
              android:textColor="@color/darkGreen"

              />
          <LinearLayout

              android:paddingTop="2dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="2dp"
                  android:layout_weight="0.4"
                  android:layout_height="wrap_content">
                  <TextView
                      android:id="@+id/rstn1"
                      android:textSize="13dp"
                      android:textColor="#000000"
                      android:layout_weight="0.6"
                      android:textStyle="bold"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_gravity="end"
                      android:text="STN1"
                      android:textAlignment="textEnd" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="0.4"
                      android:layout_gravity="end"
                      android:textAlignment="textEnd"
                      android:id="@+id/dt_n_day1"
                      android:text="-"
                      />
              </LinearLayout>

              <ImageView

                  android:layout_width="0dp"
                  android:layout_height="34dp"
                  android:layout_weight="0.2"
                  android:src="@drawable/arrow1"
                  />
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="2dp"
                  android:layout_weight="0.4"
                  android:layout_height="wrap_content">
                  <TextView

                      android:id="@+id/rstn2"

                      android:textSize="13dp"
                      android:textStyle="bold"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"

                      android:text="STN2"

                      />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="0.4"
                      android:layout_gravity="start"
                      android:textAlignment="textStart"
                      android:id="@+id/dt_n_day2"
                      android:text="-"
                      />
              </LinearLayout>


          </LinearLayout>

      </LinearLayout>
  </LinearLayout>




</RelativeLayout>
