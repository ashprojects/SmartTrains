<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_train_between_stations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="24dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jpro.smarttrains.activities.TrainBetweenStations">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            style="@style/description"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mainDesc"
                android:text="@string/desc_1"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stnStartTBS"
                    android:layout_weight="0.35"
                    android:text="SHAHDOL"
                    android:textSize="14dp"
                    android:textAlignment="textEnd" />

                <ImageView
                    android:layout_marginTop="-5dp"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stnEndTBS"
                    android:layout_weight="0.35"
                    android:text="SHAHDOL"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textAlignment="textStart" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tbs_textView_sort_by"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort By"
                android:textAlignment="textEnd"
                android:textColor="#000" />

            <Spinner
                android:layout_weight="0.5"
                android:layout_toRightOf="@id/tbs_textView_sort_by"
                android:id="@+id/train_between_sort_by_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </Spinner>

        </LinearLayout>
        <ListView
            android:layout_weight="0.93"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"

            android:id="@+id/allTrainsList"
            android:divider="@android:color/transparent"
            android:dividerHeight="2.0sp"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_height="match_parent"/>


    </LinearLayout>
</RelativeLayout>
