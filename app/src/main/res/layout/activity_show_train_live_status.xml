<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jpro.smarttrains.activities.ShowTrainLiveStatus">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/live_status_item_msg"
        style="@style/description"
        android:text="Train is delayed by"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/colorPrimary" />

    <ListView
        android:layout_below="@id/live_status_item_msg"
        android:layout_above="@+id/live_status_desc"
        android:id="@+id/listView_Live_Train_Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <TextView

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/live_status_desc"
        style="@style/description"

        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/live_status_refresh_status"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:layout_above="@id/live_status_desc"
        android:src="@drawable/ic_sync" />

</RelativeLayout>
