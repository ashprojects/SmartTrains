<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/description"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/pnr_list_item_pnrNo"
            android:layout_gravity="center_vertical|start"
            android:text="PNR No. 234224781"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        ></View>
    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:text="21 Apr"
            android:textStyle="bold"
            android:id="@+id/pnr_list_item_pnrDate"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pnr_list_item_pnrTitle"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:text="Trip to Gwalior"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/pnr_list_item_pnrShortStatus"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="W/L"
            android:textAlignment="center"
            android:layout_gravity="center"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="2dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="12853 AMARKANTAK EXRESS"
            android:id="@+id/pnr_list_item_trInfo"
            />

    </LinearLayout>

</LinearLayout>