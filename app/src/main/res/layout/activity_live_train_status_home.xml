<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/activity_running_status_home"
    tools:context="jpro.smarttrains.activities.LiveTrainStatusHome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/description"
            android:paddingTop="50dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_train_running"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_train_24dp"
                    android:layout_weight="0.20" />

                <FrameLayout
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp">

                    <jpro.smarttrains.views.DelayedAutoCompleteTextView
                        android:id="@+id/running_status_select_trName"
                        android:inputType="textCapSentences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:hint="Enter Train Name or Number"
                        android:paddingRight="10dp"
                        android:imeOptions="flagNoExtractUi|actionSearch" />

                    <ProgressBar
                        android:id="@+id/pb_loading_indicator"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="23dp"
                        android:visibility="gone" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cross"
                        android:background="@color/transparent"
                        android:layout_gravity="right|center_vertical"
                        android:id="@+id/running_status_clear_btn"
                        android:layout_marginRight="23dp" />
                </FrameLayout>
                <!--utoCompleteTextView
                    android:id="@+id/trNameBox"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:hint="Enter Train Name or Number"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/running_status_TrInfoLL"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/description"
                android:weightSum="0.95"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_weight="0.4"
                    android:orientation="vertical"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="SDL"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:id="@+id/running_status_home_st1code" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="SHAHDOL"
                        android:paddingRight="5dp"
                        android:id="@+id/running_status_home_st1name"
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:layout_weight="0.15"
                    android:src="@drawable/arrow1"
                    android:layout_width="16dp"
                    android:layout_height="48dp" />

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="BPL"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:id="@+id/running_status_home_st2code" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="BHOPAL JN"
                        android:paddingLeft="5dp"
                        android:id="@+id/running_status_home_st2name"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/running_status_select_date"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="SELECT TRAIN START DATE"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                android:background="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
