<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/greenborder"
    android:id="@+id/avListLL"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingBottom="4dp"

    >
    <LinearLayout
        android:background="#41a323"

        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:id="@+id/trNoSpan"
        android:layout_marginLeft="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trNo"
            android:text="12854"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/trName"
            android:text="AMARKANTAK EXPRESS"
            android:textSize="17dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/correct"
            android:id="@+id/trOK"
            android:layout_weight="0.2"
            android:visibility="visible"
            />
    </LinearLayout>

    <LinearLayout

        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rstn1"
                android:textSize="13dp"
                android:textColor="#000000"
                android:layout_weight="0.6"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="STN1"
                android:textAlignment="textEnd" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textSize="11sp"
                android:textAlignment="textEnd"
                android:id="@+id/dt_n_day1"
                android:text="ssss-"
                />
        </LinearLayout>

        <ImageView

            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="0.1"
            android:src="@drawable/arrow1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/rstn2"

                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="STN2"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textSize="11sp"
                android:textAlignment="textStart"
                android:id="@+id/dt_n_day2"
                android:text="-"
                />
        </LinearLayout>


    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/timeSpan"
    android:text="TTTT"
    android:textAlignment="center"

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="0dp"
            android:id="@+id/status"
            android:textColor="#1fba00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="AVAILABLE 30"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/boardingInfoSpan"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/boardingInfo"
                android:text="Boarding:"
                android:layout_weight="1"
                android:gravity="center"

                android:textSize="15dp"
                android:textStyle="bold"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/boardingStn"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="-"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="11dp"
                android:id="@+id/boardingDate"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:text="Desc"
            android:paddingLeft="0dp"
            android:textSize="11dp"

            />
        <ProgressBar

            android:indeterminate="true"
            android:visibility="visible"
            android:id="@+id/listpr"
            android:layout_weight="0.02"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
             />

        <TextView
            android:id="@+id/fare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:textAlignment="textEnd"
            android:text="Fare: Rs.500"
            android:textSize="11dp"
            />
    </LinearLayout>
</LinearLayout>