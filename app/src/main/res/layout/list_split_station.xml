<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:background="@drawable/greyborder"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/viaStn"
            android:text="via ANUPPUR JN"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_train"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/stnStart"
            android:layout_weight="0.3"
            android:text="SHAHDOL"
            android:textAlignment="textEnd"
            />
        <ImageView
            android:layout_marginTop="-5dp"
            android:padding="0dp"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_weight="0.1"
            android:src="@drawable/arrow1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/stnMid_1"
            android:layout_weight="0.3"
            android:text="SHAHDOL"
            android:textStyle="bold"
            android:textAlignment="textStart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trains: "

            android:layout_weight="0.2"
            android:id="@+id/nTrains1"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_marginLeft="5dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_train"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/stnMid_2"
            android:layout_weight="0.3"
            android:text="SHAHDOL"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            />
        <ImageView
            android:layout_marginTop="-5dp"
            android:padding="0dp"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_weight="0.1"
            android:src="@drawable/arrow1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/stnEnd"
            android:layout_weight="0.3"
            android:text="SHAHDOL"
            android:textAlignment="textStart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trains: "
            android:layout_weight="0.2"
            android:id="@+id/nTrains2"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/splitDis"
        android:text="Distance: "
        />
</LinearLayout>