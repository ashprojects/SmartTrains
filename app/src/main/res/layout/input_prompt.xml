<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent">


    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fl1"
            android:textColor="#FFFFFF"
            android:text="Add New Journey"
            android:textAlignment="center"
            android:textSize="24dp"
            android:id="@+id/input_promt_desc"
            android:textStyle="bold"

            android:layout_marginBottom="10dp" />

        <FrameLayout
            android:id="@+id/fl1"

            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FFF"
                android:maxLength="10"
                android:foreground="@color/colorAccent"
                android:textAlignment="center"
                android:inputType="number"
                android:id="@+id/userInput" />

            <ImageButton
                android:tint="#FFF"
                android:id="@+id/input_promt_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                android:background="@color/transparent"
                android:layout_gravity="end|center_vertical" />
        </FrameLayout>


        <Button
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:id="@+id/userInputBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:foreground="?android:selectableItemBackground"
            android:background="#FFA30A0C" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cross"
        android:id="@+id/input_prompt_close_fab"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>