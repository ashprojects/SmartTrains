<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/redborder"
    android:id="@+id/avListLL"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingBottom="4dp"

    >
    <LinearLayout
        android:background="#811319"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:id="@+id/trNoSpan"
        android:layout_marginLeft="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/deftrNo"
            android:text="12854"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/deftrName"
            android:text="AMARKANTAK EXPRESS"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:layout_weight="0.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="11dp"
            android:layout_gravity="right|center_vertical"
            android:textStyle="bold|italic"
            android:id="@+id/position"
            />

    </LinearLayout>

    <LinearLayout

        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/defstn1"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_weight="0.6"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="STN1"
                android:textAlignment="textEnd" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textSize="12dp"
                android:textAlignment="textEnd"
                android:id="@+id/defdt_n_day1"
                android:text=""
                />
        </LinearLayout>

        <ImageView

            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:src="@drawable/arrow1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/defstn2"

                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="STN2"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:id="@+id/defdt_n_day2"
                android:text=""
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/classesLL"
            android:paddingLeft="5dp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent">


        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textAlignment="center"
            android:text="5 hrs 4m"
            android:id="@+id/travelTime"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/runsOnLL1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:id="@+id/trSun"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:id="@+id/trM"
                />
            <TextView
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:id="@+id/trTue"
                />
            <TextView
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:id="@+id/trW"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:id="@+id/trT"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:id="@+id/trF"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:id="@+id/trS"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>